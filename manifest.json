{
  "manifest_version": 3,
  "name": "LinkedIn Job Auto-Applier",
  "version": "1.0.0",
  "description": "Automatically generate and send job application emails using AI",
  "permissions": ["activeTab", "storage", "identity"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://mail.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
