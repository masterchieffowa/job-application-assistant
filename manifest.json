{
  "manifest_version": 3,
  "name": "Job Application Assistant",
  "version": "2.0.0",
  "description": "Generate professional job application emails from any job post using AI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://mail.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
